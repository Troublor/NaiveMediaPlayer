<Page x:Class="NaiveMediaPlayer.PlayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:NaiveMediaPlayer"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource SystemControlAcrylicWindowBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0"
                BorderBrush="AntiqueWhite"
                BorderThickness="0,0,3,0"
                Width="500">
            <Grid Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <RelativePanel Width="400"
                               Grid.Row="0">
                    <TextBlock HorizontalAlignment="Center"
                               Text="选择一个媒体文件来播放（mp3, mp4）："
                               RelativePanel.AlignVerticalCenterWithPanel="True"
                               RelativePanel.LeftOf="AddButton"></TextBlock>
                    <AppBarButton Width="50"
                                  Height="50"
                                  Icon="Add"
                                  FontSize="25"
                                  Background="LightGray"
                                  Name="AddButton"
                                  RelativePanel.AlignRightWithPanel="True"
                                  Click="OnChooseFileButtonClicked"></AppBarButton>
                </RelativePanel>
                <ScrollViewer Grid.Row="1">
                    <ListView ItemsSource="{x:Bind _playHistory, Mode=OneWay}"
                              IsItemClickEnabled="False"
                              IsSwipeEnabled="False"
                              CanDragItems="False"
                              ScrollViewer.VerticalScrollMode="Enabled">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:PlayHistory">
                                <StackPanel Orientation="Vertical">
                                    <RelativePanel Width="460"
                                                   Margin="0,0,12,0">
                                        <TextBlock Text="{x:Bind FileName, Mode=OneWay}"
                                                   FontSize="28"
                                                   FontWeight="Bold"
                                                   Style="{ThemeResource BaseTextBlockStyle}"
                                                   Foreground="{ThemeResource SystemControlPageTextBaseHighBrush}"
                                                   RelativePanel.AlignVerticalCenterWithPanel="True"
                                                   RelativePanel.AlignLeftWithPanel="True" />
                                        <TextBlock Text="{x:Bind Time, Mode=OneWay}"
                                                   HorizontalAlignment="Right"
                                                   Style="{ThemeResource BodyTextBlockStyle}"
                                                   Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                                                   RelativePanel.AlignVerticalCenterWithPanel="True"
                                                   RelativePanel.AlignRightWithPanel="True" />
                                    </RelativePanel>
                                    <TextBlock FontSize="12"
                                               FontWeight="Light"
                                               Margin="12,0,0,0"
                                               Text="{x:Bind FilePath, Mode=OneWay}"></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>



            </Grid>
        </Border>

        <MediaElement Name="MediaElement"
                      Grid.Column="1"
                      Margin="0,0,0,0"
                      Width="Auto"
                      AutoPlay="True"
                      AreTransportControlsEnabled="True"
                      PosterSource="/Assets/music.jpg"
                      CurrentStateChanged="MediaElement_CurrentStateChanged" />
    </Grid>
</Page>
 
